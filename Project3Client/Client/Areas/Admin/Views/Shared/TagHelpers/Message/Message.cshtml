<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
        <i class="mdi mdi-bell-outline"></i>
        @if (Int32.Parse(ViewBag.Count) > 0 || Int32.Parse(ViewBag.CountSer) > 0)
        {
            <span class="count-symbol bg-danger"></span>
        }
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown" style="left:auto">
        <h6 class="p-3 mb-0">Notifications</h6>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <div class="preview-icon bg-success">
                    <i class="mdi mdi-calendar"></i>
                </div>
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject font-weight-normal mb-1">Event today</h6>
                <p class="text-gray ellipsis mb-0"> Just a reminder that you have an event today </p>
            </div>
        </a>
        <div class="dropdown-divider"></div>
        @if (Int32.Parse(ViewBag.Count) > 0)
        {
            <a class="dropdown-item preview-item" asp-area="admin" asp-controller="account" asp-action="acceptAccount">
                <div class="preview-thumbnail">
                    <div class="preview-icon bg-warning">
                        <i class="mdi mdi-settings"></i>
                    </div>
                </div>
                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                    <h6 class="preview-subject font-weight-normal mb-1">Active Account</h6>
                    <p class="text-gray ellipsis mb-0">@ViewBag.Count account is waiting for accept </p>
                </div>
            </a>
        }
        <div class="dropdown-divider"></div>
        @if (Int32.Parse(ViewBag.CountSer) > 0)
        {
            <a class="dropdown-item preview-item" asp-area="admin" asp-controller="seminar" asp-action="listSerActive">
                <div class="preview-thumbnail">
                    <div class="preview-icon bg-info">
                        <i class="mdi mdi-link-variant"></i>
                    </div>
                </div>
                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                    <h6 class="preview-subject font-weight-normal mb-1">Active Seminar</h6>
                    <p class="text-gray ellipsis mb-0">@ViewBag.CountSer seminar is waiting for accept</p>
                </div>
            </a>
        }
        <div class="dropdown-divider"></div>
        <h6 class="p-3 mb-0 text-center">See all notifications</h6>
    </div>
</li>