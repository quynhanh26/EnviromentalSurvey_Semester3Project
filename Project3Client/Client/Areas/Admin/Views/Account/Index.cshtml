@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">List Account</h4>
            <table class="table table-striped" id="tableAcc">
                <thead>
                    <tr>

                        <th>Username</th>
                        <th> Id People </th>
                        <th> Date </th>
                        <th> Role </th>
                        <th> Status </th>
                        <th> Delete </th>
                    </tr>
                </thead>
                <tbody id="tbodyAcc">
                    @if (ViewBag.listAccount != null)
                        @foreach (var acc in ViewBag.listAccount)
                        {
                            <tr>
                                <td hidden>@acc.Id</td>
                                <td>
                                    <img src="~/img/avatar/@acc.Img" class="mr-2" alt="image">@acc.UserName
                                </td>
                                <td>@acc.IdPeople</td>
                                <td>@acc.Date.ToString("dd/MM/yyyy")</td>
                                <td>@acc.Role</td>
                                @if (acc.Status)
                                {
                                    <td><label class="badge badge-gradient-success"> ENABLE</label></td>
                                }
                                else
                                {
                                    <td><label class="badge badge-gradient-danger"> DISNABLE</label></td>
                                }

                                <td><button class="btn btn-gradient-danger btnDelAcc"><i class="mdi mdi-account-remove"></i></button></td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>