
@{
    ViewData["Title"] = "DetailAccount";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @if (Int32.Parse(ViewBag.Count) > 0)
            {
                <div class="alert alert-danger" role="alert">
                    User has 1 account
                </div>
            }
            <div class="card-title mb-4">
                <div class="d-flex justify-content-start">
                    <div class="image-container">
                        <img src="~/img/avatar/@ViewBag.Account.Img" id="imgProfile" style="width: 150px; height: 150px" class="img-thumbnail" />
                    </div>
                    <div class="userData ml-3">
                        <button class="btn btn-gradient-success"><a asp-area="admin" asp-controller="account" asp-action="accept" asp-route-id="@ViewBag.Account.Id">Accept</a></button>
                        <button class="btn btn-gradient-info" data-toggle="modal" data-target="#infoPerson">Check Info</button>
                        <button class="btn btn-gradient-danger"><a asp-area="admin" asp-controller="account" asp-action="delAccept" asp-route-id="@ViewBag.Account.Id">Del</a> </button>
                    </div>
                    <div class="ml-auto">
                        <input type="button" class="btn btn-primary d-none" id="btnDiscard" value="Discard Changes" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="basicInfo-tab" data-toggle="tab" href="#basicInfo" role="tab" aria-controls="basicInfo" aria-selected="true">Basic Info</a>
                        </li>
                    </ul>
                    <div class="tab-content ml-1" id="myTabContent">
                        <div class="tab-pane fade show active" id="basicInfo" role="tabpanel" aria-labelledby="basicInfo-tab">
                            <div class="row">
                                <div class="col-sm-3 col-md-2 col-5">
                                    <label style="font-weight:bold;">Full Name</label>
                                </div>
                                <div class="col-md-8 col-6">
                                    @ViewBag.Account.UserName
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3 col-md-2 col-5">
                                    <label style="font-weight:bold;">Email</label>
                                </div>
                                <div class="col-md-8 col-6">
                                    @ViewBag.Account.Email
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3 col-md-2 col-5">
                                    <label style="font-weight:bold;">Id People</label>
                                </div>
                                <div class="col-md-8 col-6">
                                    @ViewBag.Account.IdPeople
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3 col-md-2 col-5">
                                    <label style="font-weight:bold;">Role</label>
                                </div>
                                <div class="col-md-8 col-6">
                                    @ViewBag.Account.Role
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3 col-md-2 col-5">
                                    <label style="font-weight:bold;">Joining date</label>
                                </div>
                                <div class="col-md-8 col-6">
                                    @ViewBag.Account.Date.ToString("dd/MM/yyyy")
                                </div>
                            </div>
                            <hr />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="infoPerson">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Update</h4>
            </div>
            <div class="modal-body">
                <div class="table-wrapper-scroll-y my-custom-scrollbar">
                    @if (ViewBag.InfoPerson != null)
                    {
                        <div class="card-title mb-4">
                            <div class="d-flex justify-content-start">
                                <div class="image-container">
                                    <img src="~/img/person/@ViewBag.InfoPerson.Img" id="imgProfile" style="width: 150px; height: 150px" class="img-thumbnail" />
                                </div>
                                <div class="ml-auto">
                                    <input type="button" class="btn btn-primary d-none" id="btnDiscard" value="Discard Changes" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="basicInfo-tab" data-toggle="tab" href="#basicInfo" role="tab" aria-controls="basicInfo" aria-selected="true">Basic Info</a>
                                    </li>
                                </ul>
                                <div class="tab-content ml-1" id="myTabContent">
                                    <div class="tab-pane fade show active" id="basicInfo" role="tabpanel" aria-labelledby="basicInfo-tab">
                                        <div class="row">
                                            <div class="col-sm-3 col-md-2 col-5">
                                                <label style="font-weight:bold;">Full Name</label>
                                            </div>
                                            <div class="col-md-8 col-6">
                                                @ViewBag.InfoPerson.Name
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row">
                                            <div class="col-sm-3 col-md-2 col-5">
                                                <label style="font-weight:bold;">Birthday</label>
                                            </div>
                                            <div class="col-md-8 col-6">
                                                @ViewBag.InfoPerson.Dob.ToString("dd/MM/yyyy")
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row">
                                            <div class="col-sm-3 col-md-2 col-5">
                                                <label style="font-weight:bold;">Gender</label>
                                            </div>
                                            <div class="col-md-8 col-6">
                                                @(ViewBag.InfoPerson.Gender? "Male":"Female")
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row">
                                            <div class="col-sm-3 col-md-2 col-5">
                                                <label style="font-weight:bold;">Position</label>
                                            </div>
                                            <div class="col-md-8 col-6">
                                                @ViewBag.InfoPerson.Position
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row">
                                            <div class="col-sm-3 col-md-2 col-5">
                                                <label style="font-weight:bold;">Class</label>
                                            </div>
                                            <div class="col-md-8 col-6">
                                                @(ViewBag.InfoPerson.Class != null ? ViewBag.InfoPerson.Class : "")
                                            </div>
                                        </div>
                                        <hr />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger" role="alert">
                            This person's information is not correct
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

