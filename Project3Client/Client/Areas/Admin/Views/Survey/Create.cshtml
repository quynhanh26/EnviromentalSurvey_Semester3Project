
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Seminar</h4>
            <form method="post" id="addSurvey">
                <div class="form-group">
                    <div class="form-group">
                        <h6><label for="Name">Name</label></h6>
                        <input type="text" class="form-control" id="Name" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <h6> <label for="daypicker">Updated</label></h6>
                        <input type="text" class="form-control datepicker" id="Updated" value="@(DateTime.Today.ToString("MM/dd/yyyy"))">
                    </div>
                    <div class="form-group">
                        <h6><label for="desc">Description</label></h6>
                        <textarea class="form-control" id="desc" rows="4"></textarea>
                    </div>
                    <select class="custom-select" id="Active">
                        <option value="0">Student</option>
                        <option value="1">Teacher</option>
                    </select>
                </div>
                <hr />
                <table class="table pagination1" id="tblQuesSurvey">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Quesntion</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="bodyQuesSurvey">
                        @if (ViewBag.listQues != null)
                            @foreach (var item in ViewBag.listQues)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Question1</td>
                                    <td>
                                        <button class="btn btn-gradient-danger add" type="button">Add</button>
                                    </td>
                                </tr>
                            }
                    </tbody>
                </table>
                <button type="submit" class="btn btn-outline-success">Save</button>
            </form>
        </div>
    </div>
</div>
