
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="form-group">
                <h6><label for="Name">Name</label></h6>
                <input type="text" class="form-control" id="questionOld" value="@ViewBag.sur.Name" disabled>
            </div>
            <div class="form-group">
                <h6><label for="Updated">Updated</label></h6>
                <input type="text" class="form-control" id="Updated" value="@(ViewBag.sur.Updated.ToString("dd/MM/yyyy"))" disabled>
            </div>
            <div class="form-group">
                <h6><label for="object">Object</label></h6>
                <input type="text" class="form-control" id="object" value="@(ViewBag.sur.Active ? "Teacher" : "Student")" disabled>
            </div>
            <div class="form-group">
                <h6><label for="desc">Description</label></h6>
                <textarea class="form-control" id="desc"  rows="4" disabled>@ViewBag.sur.Description</textarea>
            </div>
            <h4 class="card-title">Answer Table</h4>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Question</th>
                    </tr>
                </thead>
                <tbody id="bodyAnswer">

                    @if (ViewBag.sur.QuestionSurveys != null)
                        @foreach (var item in ViewBag.sur.QuestionSurveys)
                        {
                            <tr>
                                <td>@item.IdQuestion</td>
                                <td>@item.IdQuestionNavigation.Question1</td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>

