@model Client.Models.Question;
@{ ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Question Table</h4>
            <button class="btn btn-lg btn-gradient-primary " data-toggle="modal" data-target="#addQuestionModal">
                + Add Quesntion
            </button>
            <table class="table" id="tableQuestion">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Quesntion</th>
                        <th>Updated</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="bodyQuestion">
                    @if (ViewBag.listQuestion != null)
        @foreach (var item in ViewBag.listQuestion)
        {
<tr>
    <td>@item.Id</td>
    <td>@item.Question1</td>
    <td>@item.Updated.ToString("dd/MM/yyyy")</td>
    @if (item.Status)
    {
<td><label class="badge badge-success">enable</label></td> }
                    else
                    {
<td><label class="badge badge-danger">disnable</label></td>}
    <td>
        <button class="btn btn-gradient-danger" type="button">
            <a href="/admin/question/delQuestion?idQues=@item.Id" onclick="return confirm('Are you sure you want to delete this item?');">
                <i class="mdi mdi-delete"></i>
            </a>

        </button>

        <button class="btn btn-gradient-warning">
            <a href="/admin/question/detailQues?idQues=@item.Id">
                <i class="mdi mdi-format-list-bulleted menu-icon"></i>
            </a>
        </button>
    </td>
</tr>}
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal" id="addQuestionModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Question</h4>
            </div>
            <div class="modal-body">
                <div class="col-lg-12">
                    <div class="card-body card-block">
                        <form method="post" id="addQuestion">
                            <div class="form-group">
                                <label for="inputName" class=" form-control-label"></label>
                                <textarea placeholder="Answer" class="form-control" asp-for="Question1" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-outline-success">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
